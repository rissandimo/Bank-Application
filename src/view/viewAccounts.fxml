<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="547.0" prefWidth="814.0" stylesheets="@css/viewAccounts.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewAccountsController">
   <children>
   
       <MenuBar prefHeight="25.0" prefWidth="817.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <menus>
          <Menu text="File">
             <items>
                 <MenuItem onAction="#handleNewTransaction" text="New Transaction" />
                 <MenuItem text="Print" />
                 <MenuItem text="Exit" />
             </items>
          </Menu>
          <Menu text="Transfer">
             <items>
                 <MenuItem text="From/To" />
                 <MenuItem text="To/From" />
             </items>
          </Menu>
      </menus>
       </MenuBar>
   
       <TableView fx:id="tableView" prefHeight="350.0" prefWidth="761.0" stylesheets="@css/mainView.css" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
           <columns>
               <TableColumn fx:id="dateColumn" prefWidth="204.0" text=" Date" />
               <TableColumn fx:id="descriptionColumn" prefWidth="139.0" text="Description" />
               <TableColumn fx:id="typeColumn" minWidth="0.0" prefWidth="73.0" text="Type" />
               <TableColumn fx:id="amountColumn" prefWidth="91.0" text="Amount" />
               <TableColumn fx:id="balanceColumn" prefWidth="92.0" text="Balance" />
           </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
       </TableView>
   </children>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>


</GridPane>
